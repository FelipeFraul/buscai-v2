{
  "name": "@buscai/api",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "dev:billing-flow": "tsx scripts/dev-billing-flow.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "lint": "eslint \"src/**/*.ts\"",
    "stress:health": "npx autocannon -c 50 -d 10 http://localhost:3001/internal/health",
    "test": "tsx scripts/run-tests.ts",
    "test:watch": "vitest watch",
    "test:ci": "vitest run --coverage",
    "test:api:stable": "vitest run --pool=threads --maxWorkers=2 --minWorkers=1",
    "test:api:bunker": "vitest run --pool=forks --maxWorkers=2 --minWorkers=1",
    "test:e2e": "vitest run --dir tests/e2e",
    "db:generate": "drizzle-kit generate:pg --config drizzle.config.ts",
    "db:migrate": "drizzle-kit push --config drizzle.config.ts",
    "db:apply-sql": "tsx scripts/apply-sql.ts",
    "db:reset": "docker exec -i buscai-db psql -U buscai -d postgres -c \"DROP DATABASE IF EXISTS buscai;\" && docker exec -i buscai-db psql -U buscai -d postgres -c \"CREATE DATABASE buscai OWNER buscai;\" && docker cp db_reset.sql buscai-db:/db_reset.sql && docker exec -i buscai-db psql -U buscai -d buscai -f /db_reset.sql",
    "db:seed": "pnpm exec tsx seed/seed.ts",
    "db:bootstrap": "pnpm exec tsx scripts/bootstrap.ts",
    "db:fix-pass": "docker exec -i buscai-db psql -U buscai -d postgres -c \"ALTER ROLE buscai WITH PASSWORD 'buscai';\"",
    "db:nuke": "docker stop buscai-db 2>NUL || echo skip && docker rm buscai-db 2>NUL || echo skip && docker volume rm buscai-v2_postgres-data 2>NUL || echo skip",
    "subscriptions:renew": "tsx scripts/subscriptions-renew.ts"
  },
  "dependencies": {
    "@buscai/shared-schema": "workspace:*",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "csv-parse": "^5.5.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.44.7",
    "fastify": "^4.26.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.5",
    "prom-client": "^15.1.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.25",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "drizzle-kit": "^0.31.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^1.6.0"
  }
}
